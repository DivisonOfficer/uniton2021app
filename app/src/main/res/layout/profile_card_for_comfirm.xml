<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#ffffe3"
    android:elevation="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileCardPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:src="@color/black"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"


        android:fontFamily="@font/spoqa_han_sans_regular"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileCardPhoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profileCardAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="나이"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_han_sans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileCardName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profileCardGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(성별)"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toEndOf="@id/profileCardAge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_dismiss"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="5dp"

        android:src="@drawable/baseline_cancel_black_18dp"
        app:backgroundTint="@android:color/white"
        app:fabCustomSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_approve"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="48dp"
        tools:ignore="MissingConstraints"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_approve"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="5dp"

        android:src="@drawable/baseline_check_circle_black_18dp"
        app:backgroundTint="@android:color/white"
        app:fabCustomSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="48dp"
        tools:ignore="MissingConstraints"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>